@model eRPBusiness.Transport.BancoDTO
@using eRPBusiness.Helpers;
@using eRPBusiness.Common;
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "form1" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.CRM().TextBoxFor(m => m.Nombre, "col-md-9", "Nombre", "col-lg-3").Attributes(new { @placeholder = "Nombre" })
                        </div>
                          <div class="form-group">
                            @Html.CRM().TextBoxFor(m => m.Descripcion, "col-md-9", "Descripción", "col-lg-3").Attributes(new { @placeholder = "Descripción" })
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.BancoId)
                }
            </div>
        </div>
    </div>

</div>


