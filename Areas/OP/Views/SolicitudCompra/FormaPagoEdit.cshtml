@model eRPBusiness.Transport.FormaCancelacionDTO
@using eRPBusiness.Helpers;
@using eRPBusiness.Common;
@{
    ViewBag.Title = "FormaPagoEdit";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.CRM().DropDownList("FormaVentaId", Model.FormaVentaId, @ViewBag.FormaPagoList, "col-lg-9 col-md-9", "Condición", "col-lg-3")
                    </div>
                    <div class="form-group">
                        @Html.CRM().DateTimePickerFor(m => m.FechaVencimiento, "col-lg-9 col-md-9", "Vencim.", "col-lg-3").PickerType(DateTimePickerType.Date).Attributes(new { @placeholder = "Fecha vencimiento" })
                    </div>
                    <div class="form-group">
                        @Html.CRM().NumericTextBoxFor(m => m.NumeroDias, "col-lg-9 col-md-9", "Dias", "col-lg-3").TextNumericType(NumericType.Decimal).CantidadEnteros(14).CantidadDecimales(2)
                    </div>
                    <div class="form-group">
                        @Html.CRM().NumericTextBoxFor(m => m.ValorTotal, "col-lg-9 col-md-9", "Cantidad", "col-lg-3").TextNumericType(NumericType.Decimal).CantidadEnteros(14).CantidadDecimales(2)
                    </div>
                    <div class="form-group">
                        @Html.CRM().NumericTextBoxFor(m => m.MontoPago, "col-lg-9 col-md-9", "Pago", "col-lg-3").TextNumericType(NumericType.Decimal).CantidadEnteros(14).CantidadDecimales(2)
                    </div>
                    <div class="form-group">
                        @Html.CRM().NumericTextBoxFor(m => m.MontoVuelto, "col-lg-9 col-md-9", "Vuelto", "col-lg-3").TextNumericType(NumericType.Decimal).CantidadEnteros(14).CantidadDecimales(2)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
