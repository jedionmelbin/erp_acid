@using eRPBusiness.Helpers
<div class="row">
    <div class="col-lg-12">
        <table id="jqGridCotizacion"></table>
        <div id="jqPagerCotizacion"></div>
    </div>
</div>

<script type="text/javascript">
    $("#jqGridCotizacion").jqGrid({
        url: '@Url.Action("ListarCotizacion", "SolicitudCompra", new { area = "op" })',
        mtype: "POST",
        postData: {
            
        },
        datatype: "json",
        colModel: [
            { label: 'Id', name: 'CotizacionRequerimientoId', key: true, hidden: true },
            { label: 'Codigo', name: 'Codigo', width: 30 },
            { label: 'Fecha Cotizacion', name: 'Fecha', width: 30 },
            { label: 'Fecha Entrega', name: 'FechaEntrega', width: 30 }
        ],
        viewrecords: false,
        loadonce: true,
        rowList: [10, 20, 30],
        height: 150,
        width: 560,
        rowNum: 20,
        ondblClickRow: function (rowId) {
            var rowData = jQuery(this).getRowData(rowId);
            onClickOkCotizacion(rowData);
        },
        pager: "#jqPagerCotizacion"
    });


</script>