@using eRPBusiness.Helpers
<div class="row">
    <div class="col-lg-12">
        <table id="jqGridCotizacion"></table>
        <div id="jqPagerCotizacion"></div>
    </div>
</div>

<script type="text/javascript">
    $("#jqGridCotizacion").jqGrid({
        url: '@Url.Action("ListarCotizacion", "FacturaVenta", new { area = "op" })',
        mtype: "POST",
        postData: {

        },
        datatype: "json",
        colModel: [
            { label: 'Id', name: 'CotizacionRequerimientoId', key: true, hidden: true },
            { label: 'Codigo', name: 'Codigo', width: 13 },
            { label: 'Fecha Emision', name: 'FechaEmision', width: 13 },
            { label: 'Fecha Entrega', name: 'FechaEntrega', width: 13 },
            { label: 'Documento', name: 'NumeroDocumento', width: 15 },
            { label: 'Razon Social', name: 'RazonSocial', width: 50 }
        ],
        viewrecords: false,
        loadonce: true,
        rowList: [10, 20, 30],
        height: 150,
        width: 870,
        rowNum: 20,
        rownumbers: true,
        ondblClickRow: function (rowId) {
            var rowData = jQuery(this).getRowData(rowId);
            onClickOkCotiza(rowData);
        },
        pager: "#jqPagerCotizacion"
    });


</script>