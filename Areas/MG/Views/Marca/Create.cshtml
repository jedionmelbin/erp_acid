@using eRPBusiness.Helpers
@model eRPBusiness.Transport.MarcaDTO
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    @Html.CRM().TextBoxFor(m => m.Codigo, "col-lg-4", "Código", "col-lg-2").Attributes(new { @maxlength = "10", @placeholder = "Codigo" })
                </div>
                <div class="form-group">
                    @Html.CRM().TextBoxFor(m => m.Nombre, "col-lg-10", "Nombre", "col-lg-2").Attributes(new { @placeholder = "Nombre" })
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2 col-md-2">Adjuntar</label>
                    <div class="col-md-6">
                        <input type="file" id="fileImage" name="fileImage" multiple />
                    </div>
                </div>
                @Html.HiddenFor(m => m.MarcaId)
            </div>
        </div>
    </div>
</div>

