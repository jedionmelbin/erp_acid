    function onClickMenuBar(control) {

        var postData = {
            editAction: '',
            menuId: 0
        };
        var row = getGridSelectedRow("jqGridBandeja");
        switch (control) {
            case "@ButtonMenuBarActionConstant.NEW":
                postData.editAction = '@EditActionConstant.NEW';
                controllerGetAction('@Url.Action("Create", "Opciones", new { area = "CG" })', postData, 'workspace', true, true, null);
                break;
            case "@ButtonMenuBarActionConstant.EDIT":
                if (!isEmpty(row)) {
                    postData.editAction = '@EditActionConstant.EDIT';
                    postData.menuId = row.MenuId;
                    controllerGetAction('@Url.Action("Create", "Opciones", new { area = "CG" })', postData, 'workspace', true, true, null);
                } else {
                    MsgAlert(2, 'Seleccione un menu');
                }
                break;
        }
    }



