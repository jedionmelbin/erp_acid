@model eRPBusiness.Transport.RolDTO
@using eRPBusiness.Helpers;
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body form-horizontal">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "form1" }))
                {
                    @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.CRM().TextBoxFor(m => m.Codigo, "col-md-9", "Codigo", "col-lg-3").Attributes(new { @placeholder = "Codigo" })
                    </div>
                    <div class="form-group">
                        @Html.CRM().TextBoxFor(m => m.Nombre, "col-md-9", "Nombre", "col-lg-3").Attributes(new { @placeholder = "Nombre" })
                    </div>
                </div>
                    @Html.HiddenFor(m => m.RolId)
                }
            </div>
        </div>
    </div>

</div>
