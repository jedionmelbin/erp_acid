@model eRPBusiness.Transport.DeliveryDTO
@using eRPBusiness.Helpers
@{
    ViewBag.Title = "Categoria";
}

<div class="panel panel-default">
    <div class="panel-body form-horizontal" id="panel">
        <div class="form-group">
            @Html.CRM().DropDownList("EmpresaId", Model.EmpresaId, @ViewBag.EmpresaList, "col-lg-10", "Empresa", "col-lg-2", new { })
        </div>
        <div class="form-group">
            @Html.CRM().TextBoxFor(m => m.Nombre, "col-lg-10", "Nombre", "col-lg-2").Attributes(new { @placeholder = "Nombre" })
        </div>
        <div class="form-group">
            @Html.CRM().NumericTextBoxFor(m => m.DiaInicio, "col-lg-4", "Dia Inicio", "col-lg-2").Attributes(new { @placeholder = "Sub Titulo" })
            @Html.CRM().NumericTextBoxFor(m => m.DiaFinal, "col-lg-4", "Dia Final", "col-lg-2").Attributes(new { @placeholder = "Texto" })
        </div>
        <div class="form-group">
            @Html.CRM().NumericTextBoxFor(m => m.CostoEnvio, "col-lg-4", "Costo", "col-lg-2").TextNumericType(NumericType.Decimal).CantidadEnteros(14).CantidadDecimales(2).Attributes(new {  })
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Principal</label>
            @Html.CRM().CheckBoxFor(m => m.Principal, "col-lg-4", "")
        </div>
        @Html.HiddenFor(m => m.DeliveryId)
    </div>
</div>
<script type="text/javascript">

</script>